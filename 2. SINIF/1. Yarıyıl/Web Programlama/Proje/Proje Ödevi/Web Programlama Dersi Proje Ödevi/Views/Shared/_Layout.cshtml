    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

</head>
<body>
<header id="header" id="home" style="background-color:black;">
 <div class="container">
     <div class="row align-items-center justify-content-between d-flex">

         <div id="logo">
             <img src="https://i.hizliresim.com/V9L45r.png" />
         </div>


         <nav id="nav-menu-container">
             <ul class="nav-menu">

                 @if (Session["IsAdmin"] != null)
                 {
                     <li>@Html.ActionLink(Web_Programlama_Dersi_Proje_Ödevi.Resources.hometext.AraclariGoruntule, "Index", "Aracs")</li>
                     <li>@Html.ActionLink(Web_Programlama_Dersi_Proje_Ödevi.Resources.hometext.KullanicilariGörüntüle, "Index", "Users")</li>
                 }
                 <li>@Html.ActionLink(Web_Programlama_Dersi_Proje_Ödevi.Resources.hometext.AnaSayfa, "Index", "Home")</li>
                 <li>@Html.ActionLink(Web_Programlama_Dersi_Proje_Ödevi.Resources.hometext.Hakkimizda, "Hakkimizda", "Home")</li>
                 <li>@Html.ActionLink(Web_Programlama_Dersi_Proje_Ödevi.Resources.hometext.Araclar, "Araclar", "Aracs")</li>
                 <li>@Html.ActionLink(Web_Programlama_Dersi_Proje_Ödevi.Resources.hometext.Iletisim, "Iletisim", "Home")</li>
                 @if (Session["UserName"] == null)
                 {
                    <li>@Html.ActionLink(Web_Programlama_Dersi_Proje_Ödevi.Resources.hometext.GirisYap, "Giris", "GirisKayitIslemleri")</li>
                    <li>@Html.ActionLink(Web_Programlama_Dersi_Proje_Ödevi.Resources.hometext.KayitOl, "Kayit", "GirisKayitIslemleri")</li>
                 }

                 @if (Session["UserName"] != null)
                 {
                    <li>@Html.ActionLink(Web_Programlama_Dersi_Proje_Ödevi.Resources.hometext .CikisYap+ "(  "+Session["UserName"] + "  )  ", "Cikis", "GirisKayitIslemleri")</li>
                    <li>@Html.ActionLink(Web_Programlama_Dersi_Proje_Ödevi.Resources.hometext.SepetiListele, "Index", "Sepets")</li>
                 }
                 <li><a href="@Url.Action("Sec","Language",new { LanguageAbbrevation  = "tr"},null)"><img src="https://i.hizliresim.com/QLYXmr.png"></a></li>
                 <li><a href="@Url.Action("Sec","Language",new { LanguageAbbrevation = "en"},null)"><img src="https://i.hizliresim.com/nQmPn1.png"></a></li>
             </ul>
         </nav>
     </div>
 </div>
</header>

    @RenderBody()


 <footer class="footer-area section-gap" style="background-color:black; color:gray">
   <div class="container">
     <div class="row">
         <p class="mt-50 mx-auto footer-text col-lg-12">
              &copy; @DateTime.Now.Year made with Emrullah Karakoç - Ahmet Can Örten
             <br />
         </p>
     </div>
   </div>
 </footer>

</body>
</html>