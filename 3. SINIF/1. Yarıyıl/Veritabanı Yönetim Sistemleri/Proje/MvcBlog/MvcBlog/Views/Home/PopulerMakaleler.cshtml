@model IEnumerable<MvcBlog.Models.Makale>
@{
    Layout = null;
}
<h5 class="card-header">En Çok Okunan Makaleler</h5>

<div class="row">
    <div class="col-lg-12">
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="/Home/MakaleDetayı/@item.Makaleid">@item.Baslik</a>(@item.Okuma)</li>
            }
        </ul>
    </div>
</div>